<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">                
            <h2 class="text-center  p-4 mt-4 bg-primary text-warning">Create New Post</h2>
            <form action="" method="post" enctype="multipart/form-data">
                <div class="mb-3 form-group">
                    <label for="title" class="form-label">Post Title</label>
                    <input type="text" class="form-control" id="title" name="title" onkeyup="createSlug()">
                </div>
                <div class="mb-3 form-group">
                    <label for="slug" class="form-label">Slug</label>
                    <input type="text" class="form-control" id="slug" name="slug">
                </div>
                <div class="mb-3 form-group">
                    <label for="category" class="form-label">Category</label>
                    <div class="input-group">
                        <select class="custom-select" name="category" id="category">
                            <% category_list.forEach((item)=>{ %>
                                <option value="<%= item  %>"> <%= item  %> </option>
                            <% }) %>
                         
                        </select>
                    </div>
                </div>
                <div class="mb-3 form-group">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" id="description" name="description" style="padding: 15px 0px 100px 10px;">
                </div>
                <div class="mb-3 form-group">
                    <label for="image" class="form-label">Feature Image</label>
                    <input type="file" class="form-control" id="image" name="image">
                </div>
                <input type="submit" class="btn btn-primary w-100" value="submit">
            </form>
        </div>
        <div class="col-2"></div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
  var editor1 = new RichTextEditor("#description");

</script>
<script>
    function createSlug() {
        var val = document.forms[0].title.value;
        
        var txt = "";
        for (let i = 0; i < val.length; i++) {
            if(val[i] == " "){txt+="-"}
            else{txt+=val[i]}
            }
        document.forms[0].slug.value = txt;
}
</script>
</body>
