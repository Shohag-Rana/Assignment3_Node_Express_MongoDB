<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
      integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N"
      crossorigin="anonymous"
    />
    <!-- owl carousal -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.css"
    />
    <!-- custom css -->
    <link rel="stylesheet" href="css/home.css" />
    <link rel="stylesheet" href="css/carousal.css" />
    <title>Blog Project</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">BlogProject</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">HomePage </a>
          </li>
          <li class="nav-item active" style="margin-left: 1000px">
            <a class="nav-link float-right" href="/admin/post">Admin </a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-lg-9 col-md-12 col-sm-12 mt-2">
          <h4 class="text-success p-4">Post HighLights</h4>
          <div
            id="carouselExampleIndicators"
            class="carousel slide"
            data-ride="carousel"
          >
            <ol class="carousel-indicators">
              <li
                data-target="#carouselExampleIndicators"
                data-slide-to="0"
                class="active"
              ></li>
              <% var i=1 %> <% data.forEach((item)=>{ %>
              <li
                data-target="#carouselExampleIndicators"
                data-slide-to="<%=  i++ %>"
              ></li>
              <% }) %>
            </ol>
            <div class="carousel-inner">
              <% var i=1 %> <% data.forEach((item)=>{ %> <% if(i==1){ %>
              <div class="carousel-item active">
                <img
                  class="d-block w-100"
                  src="<%= item.feature_image %>"
                  height="450"
                  alt="First slide" 
                />
                <div class="carousel-caption d-none d-md-block">
                  <h3><%= item.post_title %></h3>
                  <p class="text-success" style="font-size: 16px">
                    Category: <%= item.post_category %>
                  </p>
                  <p class="text-danger" style="font-size: 16px">
                    Time: <%= item.time.toString().slice(0, 25) %>
                  </p>
                </div>
              </div>
              <% i=i + 1 %> <% } else{ %>
              <div class="carousel-item">
                <img
                  class="d-block w-100"
                  src="<%= item.feature_image %>"
                  height="450"
                  alt="First slide" 
                />
                <div class="carousel-caption d-none d-md-block">
                  <h3><%= item.post_title %></h3>
                  <p class="text-success" style="font-size: 16px">
                    Category: <%= item.post_category %>
                  </p>
                  <p class="text-danger" style="font-size: 16px">
                    Time: <%= item.time.toString().slice(0, 25) %>
                  </p>
                </div>
              </div>
              <% } %> <% }) %>
            </div>
            <a
              class="carousel-control-prev"
              href="#carouselExampleIndicators"
              role="button"
              data-slide="prev"
            >
              <span
                class="carousel-control-prev-icon"
                aria-hidden="true"
              ></span>
              <span class="sr-only">Previous</span>
            </a>
            <a
              class="carousel-control-next"
              href="#carouselExampleIndicators"
              role="button"
              data-slide="next"
            >
              <span
                class="carousel-control-next-icon"
                aria-hidden="true"
              ></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 mt-1">
          <h4 class="text-success p-4">Latest Post</h4>
          <% data.slice(-5, ).reverse().forEach((item)=>{ %>
          <div class="recent-post">
            <!-- <img src="<%= item.feature_image %>" alt="featureimage" height="50px" width="100%"> -->
            <p style="font-size: 14px">Title: <%= item.post_title %></p>
            <p style="font-size: 10px">
              Category: <%= item.post_category %> <br />
              <span style="font-size: 10px; color: red"
                >Date: <%= item.time.toString().slice(0, 25) %></span
              >
              <span class="ml-5"
                ><a
                  href="/post_details/<%= item.post_title %>"
                  style="font-size: 14px; color: green"
                  >Details</a
                ></span
              >
            </p>
          </div>
          <% }) %>
        </div>
      </div>
      <h5 class="text-danger p-4 mb-2 mt-5">All Categories</h5>
      <div class="row mb-2">
        <% category_list.slice(0 , 6).forEach((item)=>{ %>
        <a
          href="/category_details/<%= item.category_title %>"
          style="text-decoration: none"
        >
          <div class="col-lg-2 col-md-3 col-sm-4">
            <div class="category-image">
              <img
                src="<%= item.feature_image %>"
                height="200"
                width="150"
                alt="category-image"
              />
            </div>
            <h5 class="text-center text-info ml-5 mt-3">
              <%= item.category_title %>
            </h5>
          </div>
        </a>
        <% }) %>
      </div>
      <div>
        <a href="/all_category/" class="float-right text-danger mr-5 mb-5"
          >See All</a
        >
      </div>
    </div>
    <div class="container">
      <div class="row mb-5 mt-5">
        <% Object.entries(all_category_details).forEach(([key, value])=> { %>
          <div class="col-12">
            <h5 class="text-danger mb-2 mt-5"><%= key.toUpperCase() %></h5>
          </div>
          <div class="col-12" style="width: 100%;">
            <div class="owl-carousel" id="slider2">
              <% value.forEach((item)=>{ %>
                <a href="/post_details/<%= item.post_title %>" class="btn">
                  <div class="item">
                    <img
                      src="<%= item.feature_image %>"
                      alt=""
                      height="200px"
                      width="100%"
                    />
                    <span class="fw-bold"> <%= item.post_title %> </span>
                  </div>
                </a>
              <% }) %>
            </div>
          </div>
        <div style="margin-left: 920px">
          <a
            href="/category_details/<%= key %>"
            class="float-right text-danger mr-4 mb-5"
            >See All</a
          >
        </div>
        <% }) %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="js/carousalscript.js"></script>
  </body>
</html>
